<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/blury_background" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonRegisterOption"
                style="@style/blueButtonStyle"
                android:layout_width="@dimen/mediumButtonWidth"
                android:layout_height="@dimen/mediumButtonHeight"
                android:layout_marginBottom="136dp"
                android:text="Register"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/souqQaulity3"
                app:layout_constraintStart_toStartOf="@+id/souqQaulity3"
                app:layout_constraintTop_toBottomOf="@+id/souqQaulity3"
                app:layout_constraintVertical_bias="0.938" />

                <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonLoginOption"
                android:layout_width="@dimen/mediumButtonWidth"
                android:layout_height="@dimen/mediumButtonHeight"
                android:layout_marginTop="10dp"
                android:text="Login"
                app:layout_constraintEnd_toEndOf="@+id/souqQaulity3"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="@+id/souqQaulity3"
                app:layout_constraintTop_toBottomOf="@+id/buttonRegisterOption" />

            <TextView
                android:id="@+id/souqQaulity3"
                style="@style/h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="it's now very easy to  reach the best\n qauilty among the best products \non the internet!"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/souqFOrShopping2"
                app:layout_constraintStart_toStartOf="@+id/souqFOrShopping2"
                app:layout_constraintTop_toBottomOf="@+id/souqFOrShopping2"
                app:layout_goneMarginTop="15dp" />

            <TextView
                android:id="@+id/souqFOrShopping2"
                style="@style/h4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                android:gravity="center"
                android:text="Come And Buy Every\n Thing You Need\n From SOUQ "
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appName" />

            <TextView
                android:id="@+id/appName"
                style="@style/h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="161dp"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="161dp"
                android:drawableStart="@drawable/baseline_shopping_cart_24"
                android:drawablePadding="6dp"
                android:text="Souq."
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>
